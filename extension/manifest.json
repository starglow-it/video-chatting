{
  "manifest_version": 3,
  "name": "ChatRuume Meeting Scheduler",
  "description": "Schedule meetings directly to Google Calendar",
  "version": "1.0",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "identity",
    "activeTab",
    "storage",
    "cookies",
    "tabs"
  ],
  "host_permissions": [
    "https://www.googleapis.com/",
    "https://stg-my.chatruume.com/*",
    "https://accounts.google.com/*"
  ],
  "web_accessible_resources": [
    {
      "resources": ["icons/icon16.png"],
      "matches": ["<all_urls>"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*.google.com/calendar/u/0/r/eventedit/*"],
      "css": ["content.css"],
      "js": ["contentScript.js"]
    },
    {
      "matches": ["*://calendar.google.com/calendar/u/0/r"],
      "css": ["modal.css"],
      "js": ["modalScript.js"]
    },
    {
      "matches": ["https://stg-my.chatruume.com/login"],
      "js": ["login_page.js"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';",
    "sandbox": "sandbox allow-scripts allow-forms allow-popups allow-modals; script-src 'self' 'unsafe-inline' 'unsafe-eval'; child-src 'self';"
  },
  "oauth2": {
    "client_id": "439436979316-p97bn16seanblh660ii9ef4g35msqpm6.apps.googleusercontent.com",
    "scopes": [
      "openid",
      "https://www.googleapis.com/auth/userinfo.email",
      "https://www.googleapis.com/auth/userinfo.profile"
    ]
  }
}