{
  "manifest_version": 3,
  "name": "ChatRuume Meeting Scheduler",
  "description": "Schedule meetings directly to Google Calendar",
  "version": "1.0",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "identity",
    "activeTab",
    "storage",
    "cookies",
    "tabs"
  ],
  "host_permissions": [
    "https://www.googleapis.com/",
    "https://stg-my.chatruume.com/*"
  ],
  "web_accessible_resources": [
    {
      "resources": ["icons/icon16.png"],
      "matches": ["<all_urls>"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*.google.com/calendar/u/0/r/eventedit/*"],
      "css": ["content.css"],
      "js": ["contentScript.js"]
    },
    {
      "matches": ["*://calendar.google.com/calendar/u/0/r"],
      "css": ["modal.css"],
      "js": ["modalScript.js"]
    }
  ]
}