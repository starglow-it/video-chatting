{
  "name": "notification-service",
  "version": "0.1.0",
  "engines": {
    "node": ">=16.16.0"
  },
  "main": "src/index.ts",
  "nodemonConfig": {
    "ignore": [
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "node -r tsconfig-paths/register -r ts-node/register ./src/index.ts",
    "ext": "ts, js"
  },
  "scripts": {
    "build": "tsc --project tsconfig.server.json",
    "start": "node -r tsconfig-paths/register -r ts-node/register ./dist/notifications-service/src/index.js",
    "dev": "nodemon src/index.ts",
    "lint": "eslint ./src/",
    "lint:fix": "eslint ./src/ --fix",
    "lint:watch": "npm run lint --watch"
  },
  "dependencies": {
    "@mailchimp/mailchimp_transactional": "1.0.47",
    "amqplib": "0.10.0",
    "axios": "0.27.2",
    "dotenv": "16.0.1",
    "form-data": "4.0.0",
    "nodemailer": "6.7.7",
    "npm-check-updates": "^16.0.0",
    "tsconfig-paths": "4.0.0",
    "uuid": "8.3.2",
    "winston": "3.8.1",
    "winston-transport": "4.5.0"
  },
  "devDependencies": {
    "@types/amqplib": "0.8.2",
    "@types/mailchimp__mailchimp_transactional": "1.0.3",
    "@types/node": "18.6.1",
    "@types/nodemailer": "6.4.4",
    "@types/uuid": "8.3.4",
    "@typescript-eslint/eslint-plugin": "5.30.7",
    "@typescript-eslint/parser": "5.30.7",
    "eslint": "8.20.0",
    "eslint-config-airbnb-typescript": "17.0.0",
    "eslint-plugin-import": "2.26.0",
    "nodemon": "2.0.19",
    "ts-node": "10.9.1",
    "typescript": "4.7.4"
  }
}
